
@using SportShop.Models;
<button onclick="location.href = '@Url.Action( "GetAllPants","Clothes", new { theButton = "theShorts" })'">SHORTS</button>
<button onclick="location.href = '@Url.Action( "GetAllPants","Clothes", new { theButton = "long" })'">LONGS</button>
<button onclick="location.href = '@Url.Action( "GetAllPants","Clothes", new { theButton = "drifit" })'">DRI FIT</button>
<button onclick="location.href = '@Url.Action( "ManagerPage","Manger", new { theButton = "mangerPants" })'">MANGER</button>
<button onclick="location.href = '@Url.Action( "GetAllPants","Clothes", new { theButton = "sort" })'">SORT</button>
<div class="sportCards">


    @foreach (Clothe item in Model)
    {
        <section class="sportCard">
            <img id="sportImgCard" src=@item.photo>
            <h3 class="theText">
               MODEL: @item.model <br />
              TYPE:  @item.clothesType <br />
               PRICE: @item.price <br />
            </h3>

        </section>
    }
</div>

